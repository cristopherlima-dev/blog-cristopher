---
import Layout from '../layouts/Layout.astro';

// 1. Obter o termo de pesquisa da URL (ex: ?q=python)
const query = Astro.url.searchParams.get('q') || '';

// 2. Buscar todos os posts
const allPosts = await Astro.glob('./posts/*.md');

// 3. Filtrar posts (se houver termo de busca)
const searchResults = query 
  ? allPosts.filter((post) => {
      const title = post.frontmatter.title.toLowerCase();
      const description = (post.frontmatter.description || '').toLowerCase();
      const tags = (post.frontmatter.tags || []).join(' ').toLowerCase();
      const body = post.rawContent().toLowerCase(); // Pesquisa também no conteúdo
      const searchTerm = query.toLowerCase();

      return title.includes(searchTerm) || 
             description.includes(searchTerm) || 
             tags.includes(searchTerm) ||
             body.includes(searchTerm);
    })
  : [];
---

<Layout title="Busca">
    <header class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-slate-900 tracking-tight mb-6">
            Pesquisar no <span class="text-blue-600">Blog</span>
        </h1>

        <form action="/busca" method="get" class="max-w-xl mx-auto">
            <div class="relative">
                <input 
                    type="text" 
                    name="q" 
                    value={query}
                    placeholder="Digite o que procura (ex: python, setup...)" 
                    class="w-full px-6 py-4 rounded-full border-2 border-slate-200 focus:border-blue-500 focus:outline-none text-lg shadow-sm transition-colors"
                    autofocus
                />
                <button 
                    type="submit" 
                    class="absolute right-3 top-3 bg-blue-600 text-white p-2 rounded-full hover:bg-blue-700 transition-colors"
                    aria-label="Pesquisar"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </button>
            </div>
        </form>
    </header>

    <section>
        {query && (
            <p class="text-slate-600 mb-6 text-center">
                Encontrados <strong class="text-slate-900">{searchResults.length}</strong> resultados para "<em>{query}</em>"
            </p>
        )}

        {searchResults.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {searchResults.map((post) => (
                    <article class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-all hover:-translate-y-1">
                        <div class="mb-4">
                            {post.frontmatter.category && (
                                <span class="text-blue-600 font-bold text-xs uppercase tracking-wide">
                                    {post.frontmatter.category}
                                </span>
                            )}
                            <h2 class="text-xl font-bold text-slate-800 mt-2 leading-tight">
                                <a href={post.url} class="hover:text-blue-600 transition-colors">
                                    {post.frontmatter.title}
                                </a>
                            </h2>
                        </div>
                        <p class="text-slate-600 text-sm mb-4 line-clamp-2">
                            {post.frontmatter.description || "Clique para ler o artigo completo..."}
                        </p>
                        <a href={post.url} class="text-blue-600 font-medium hover:underline text-sm">
                            Ler artigo &rarr;
                        </a>
                    </article>
                ))}
            </div>
        ) : query ? (
            <div class="text-center py-12 bg-slate-50 rounded-2xl border border-slate-200 border-dashed">
                <p class="text-slate-500 text-lg">Nenhum post encontrado. Tente outro termo.</p>
            </div>
        ) : null}
    </section>
</Layout>