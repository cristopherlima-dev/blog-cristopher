---
import Layout from '../../layouts/Layout.astro';

// Busca todos os posts
const allPosts = await Astro.glob('../posts/*.md');

// Extrai as categorias Ãºnicas e remove valores vazios/nulos
const uniqueCategories = [
  ...new Set(allPosts.map((post) => post.frontmatter.category).filter(Boolean))
];
---

<Layout title="Categorias">
    <header class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-slate-900 tracking-tight mb-4">
            Explorar por <span class="text-blue-600">Categorias</span>
        </h1>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
            Encontre artigos agrupados pelos temas que mais te interessam.
        </p>
    </header>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {uniqueCategories.map((category) => {
            // Conta quantos posts existem nesta categoria (opcional, mas legal de ter)
            const count = allPosts.filter((post) => post.frontmatter.category === category).length;
            
            return (
                <a href={`/categorias/${category}`} class="group block bg-white rounded-2xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-all hover:-translate-y-1">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-2xl">ðŸ“‚</span>
                        <span class="bg-blue-100 text-blue-800 text-xs font-bold px-2 py-1 rounded-full">
                            {count} {count === 1 ? 'artigo' : 'artigos'}
                        </span>
                    </div>
                    <h2 class="text-xl font-bold text-slate-800 group-hover:text-blue-600 transition-colors">
                        {category}
                    </h2>
                </a>
            );
        })}
    </div>
</Layout>