---
import CookieBanner from '../components/CookieBanner.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Blog do Cristopher Lima" />
        <meta name="viewport" content="width=device-width" />
        
        <link rel="icon" type="image/png" href="https://github.com/cristopherlima-dev.png" />
        
        <title>{title} | Cristopher Lima</title>
    </head>
    <body class="bg-slate-50 text-slate-900 font-sans antialiased flex flex-col min-h-screen">
        
        <nav class="bg-slate-900 text-white shadow-lg relative z-40">
            <div class="max-w-4xl mx-auto px-4 py-4 flex justify-between items-center">
                <a href="/" class="flex items-center gap-3 text-xl font-bold tracking-tight hover:text-blue-400 transition-colors group">
                    <img 
                        src="https://github.com/cristopherlima-dev.png" 
                        alt="Foto de Cristopher Lima" 
                        class="w-10 h-10 rounded-full border-2 border-slate-700 group-hover:border-blue-400 transition-colors"
                    />
                    Cristopher Lima
                </a>

                <button id="mobile-menu-btn" class="md:hidden text-slate-300 hover:text-white focus:outline-none p-2" aria-label="Abrir Menu">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>

                <div class="hidden md:flex space-x-6 text-sm font-medium items-center">
                    <a href="/" class="hover:text-blue-400 transition-colors">Home</a>
                    <a href="/categorias" class="hover:text-blue-400 transition-colors">Categorias</a>
                    <a href="/tags" class="hover:text-blue-400 transition-colors">Tags</a>
                    <a href="/sobre" class="hover:text-blue-400 transition-colors">Sobre</a>
                    <a href="/politica-privacidade" class="hover:text-blue-400 transition-colors">Privacidade</a>
                    
                    <a href="/busca" class="text-slate-400 hover:text-white transition-colors" aria-label="Pesquisar">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </a>
                </div>
            </div>

            <div id="mobile-menu" class="hidden md:hidden bg-slate-800 border-t border-slate-700 absolute w-full left-0">
                <div class="flex flex-col px-4 py-4 space-y-4 text-sm font-medium">
                    <a href="/" class="block hover:text-blue-400 transition-colors">Home</a>
                    <a href="/categorias" class="block hover:text-blue-400 transition-colors">Categorias</a>
                    <a href="/tags" class="block hover:text-blue-400 transition-colors">Tags</a>
                    <a href="/sobre" class="block hover:text-blue-400 transition-colors">Sobre</a>
                    <a href="/politica-privacidade" class="block hover:text-blue-400 transition-colors">Privacidade</a>
                    <a href="/busca" class="flex items-center gap-2 text-slate-300 hover:text-white transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                        Pesquisar
                    </a>
                </div>
            </div>
        </nav>

        <main class="flex-grow max-w-4xl w-full mx-auto px-4 py-10">
            <slot />
        </main>

        <footer class="bg-white border-t border-slate-200 mt-auto">
            <div class="max-w-4xl mx-auto px-4 py-6 text-center text-slate-500 text-sm">
                <p>&copy; 2026 Cristopher Lima. Desenvolvido com <span class="text-orange-500 font-bold">Astro</span> & <span class="text-cyan-500 font-bold">Tailwind</span>.</p>
                
                <button id="btn-reset-cookies" class="mt-2 text-xs text-slate-400 hover:text-blue-500 underline cursor-pointer">
                    Gerenciar Cookies
                </button>
            </div>
        </footer>

        <CookieBanner />

        <script is:inline>
            const btn = document.getElementById('mobile-menu-btn');
            const menu = document.getElementById('mobile-menu');

            if(btn && menu) {
                btn.addEventListener('click', () => {
                    menu.classList.toggle('hidden');
                });
            }
        </script>
    </body>
</html>